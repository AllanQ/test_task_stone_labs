<span class="answer-form">
  <% if @answer %>
    <%= form_for @answer, url: answer_path(@answer), method: :patch, remote: true do |f| %>
      <%= render 'questions/shared_show/text_area', f: f, question_id: @question_id %>
    <% end %>
  <% else %>
    <%= form_for :answer, url: answers_path, remote: true do |f| %>
      <%= render 'questions/shared_show/text_area', f: f, question_id: @question_id %>
    <% end %>
  <% end %>
</span>
