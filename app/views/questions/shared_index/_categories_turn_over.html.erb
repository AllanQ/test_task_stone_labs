<ul class="segoepr-font text-left">
  <% categories_array.each do |category| %>
    <li class="text-primary", id="<%= category.id %>">
      <td class="text-primary"><%= category.name %></td>
      <% if can? :access, :rails_admin %>
        <td><%= link_to 'Edit', rails_admin.edit_path(model_name: 'question_category', id: category.id),
                        class: 'btn btn-mini btn-warning' %></td>
      <% end %>
      <% if can? :destroy, category %>
        <td><%= link_to 'Destroy', question_category_path(category),
                      method: :delete,
                      data: { confirm: 'Are you sure?' },
                      class: 'btn btn-mini btn-danger',
                      remote: true %></td>
      <% end %>
      <%= render'questions/shared_index/questions', category: category, type_questions: type_questions %>
      <% categories_array = QuestionCategory.where(question_category_id: category.id) %>
      <%= render'questions/shared_index/categories_turn_over', categories_array: categories_array,
                                                               type_questions: type_questions %>
    </li>
  <% end %>
</ul>
