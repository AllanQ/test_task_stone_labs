<% type_questions = params[:type_questions] %>
<p class="header-font">
  <%= type_questions %>
</p>
<span class="question">
  <%= render 'questions/shared_show/question' %>
</span>
<div>
  <% case type_questions %>
  <% when 'All questions' %>
    <%= link_to 'Back', questions_path(type_questions: 'All questions'),
      id: 'back', class: 'btn btn-primary' %>
  <% when 'Questions with answers' %>
    <%= link_to 'Back', questions_path(
      type_questions: 'Questions with answers'),
      id: 'back', class: 'btn btn-primary' %>
  <% when 'Questions without answers' %>
    <%= link_to 'Back', questions_path(
      type_questions: 'Questions without answers'),
      id: 'back', class: 'btn btn-primary' %>
<% end %>
</div>
