<% type_questions = params[:type_questions] ? params[:type_questions] : 'All questions' %>
<p class="header-font segoepr-font25"><%= type_questions %></p><br />
<% case type_questions %>
<% when 'All questions' %>
  <%= render 'question_categories/shared_index/type_questions_menu/all',
    type_questions:      type_questions,
    question_categories: QuestionCategory.roots %>
<% when 'Questions with answers' %>
  <%= render 'question_categories/shared_index/type_questions_menu/with_answers',
    type_questions:      type_questions,
    question_categories: QuestionCategory.roots %>
<% when 'Questions without answers' %>
  <%= render 'question_categories/shared_index/type_questions_menu/without_answers',
    type_questions:      type_questions,
    question_categories: QuestionCategory.roots %>
<% end %>
