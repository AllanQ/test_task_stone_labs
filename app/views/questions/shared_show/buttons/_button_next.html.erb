<% if next_question = Question.define_question(params[:type_questions],
                                               current_user.id,
                                               @question.id,
                                               true)[0] %>
  <%= link_to 'Next', question_path(next_question,
                                    type_questions: params[:type_questions]),
              id: 'next', class: 'btn btn-success',
              remote: true if next_question %>
<% end %>
